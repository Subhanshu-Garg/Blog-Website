<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label class="form-label" for="title">Title</label>
        <input id="title" class="form-control" type="text" name="title" autofocus>
    </div>
    <div class="form-group">
        <label class="form-label" for="post">Post</label>
        <textarea id="post" class="form-control" name="content" id="" cols="30" rows="8"></textarea>
    </div>
    <button style="margin-top: 10px;" class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer"); -%> 

